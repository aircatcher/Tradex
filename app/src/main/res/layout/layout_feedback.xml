<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context='com.tradex.trader.FeedbackFragment'>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etFeedback"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="40dp"
        android:width="300dp"
        android:height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        android:id="@+id/button_submit_feedback"
        android:layout_below="@+id/etFeedback"
        android:layout_alignLeft="@+id/etFeedback"
        android:layout_alignStart="@+id/etFeedback"
        android:layout_alignRight="@+id/etFeedback"
        android:layout_alignEnd="@+id/etFeedback" />
</RelativeLayout>