<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tradr.tradex.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Welcome"
                android:visibility="invisible"
                android:id="@+id/tvWelcomeMessage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="end"
                android:visibility="invisible"
                android:textAlignment="textEnd"
                android:text="Full Name"
                android:id="@+id/tvFullName"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="end"
                android:visibility="invisible"
                android:textAlignment="textEnd"
                android:text="E-Mail"
                android:id="@+id/tvEmail"
                android:layout_below="@+id/tvFullName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Trade"
                android:id="@+id/bTrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_compare_arrows"
                android:textColor="#fff"
                android:background="#6ACA6B"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:drawableTint="#fff"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/nothing"
                android:layout_toRightOf="@+id/nothing"
                android:layout_toEndOf="@+id/nothing" />

            <Button
                android:text="Inbox"
                android:id="@+id/bInbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:drawableTop="@drawable/ic_mail"
                android:textColor="#fff"
                android:background="#08AE9E"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:drawableTint="#fff"

                android:layout_alignTop="@+id/bTrade"
                android:layout_toRightOf="@+id/bTrade"
                android:layout_toEndOf="@+id/bTrade" />

            <Button
                android:text="Friends"
                android:id="@+id/bFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/ic_compare_arrows"
                android:textColor="#fff"
                android:background="#651296"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:drawableTint="#fff"
                android:layout_below="@+id/bTrade"
                android:layout_toLeftOf="@+id/bInbox"
                android:layout_toStartOf="@+id/bInbox" />

            <Button
                android:text="Help"
                android:id="@+id/bHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_compare_arrows"
                android:textColor="#fff"
                android:background="#653308"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:drawableTint="#fff"
                android:layout_alignTop="@+id/bFriends"
                android:layout_alignLeft="@+id/bInbox"
                android:layout_alignStart="@+id/bInbox" />

            <Button
                android:text="App Feedback"
                android:id="@+id/bFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_compare_arrows"
                android:textColor="#fff"
                android:background="#465D43"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:drawableTint="#fff"
                android:layout_below="@+id/bFriends"
                android:layout_toLeftOf="@+id/bInbox"
                android:layout_toStartOf="@+id/bInbox"
                android:layout_marginTop="20dp" />

            <Button
                android:text="Settings"
                android:id="@+id/bSettings"
                android:drawableTop="@drawable/ic_settings_applications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="#666666"
                android:padding="20dp"
                android:width="120dp"
                android:height="90dp"
                android:layout_alignTop="@+id/bFeedback"
                android:layout_alignLeft="@+id/bHelp"
                android:layout_alignStart="@+id/bHelp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/bLogout"
                android:textColor="#fff"
                android:background="#2d2d2d"
                android:layout_alignLeft="@+id/bFeedback"
                android:layout_alignRight="@+id/bSettings"
                android:layout_marginTop="420dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/nothing"
                android:layout_below="@+id/tvEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
